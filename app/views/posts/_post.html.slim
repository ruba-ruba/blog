div class=(dom_id(post))
  div.title
    = post.title
  div.content 
    = post.content.html_safe
  div.info
    span.hubs
      - post.hubs.each do |hub|
        = hub.title
    span.tags
    - unless "#{controller_name}/#{action_name}" == 'posts/show'
      span.actions
        = link_to 'читати далі', post_path(post), class: 'button tiny'
