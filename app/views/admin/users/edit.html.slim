= simple_form_for @user, :url =>  url_for(:controller => 'admin/users', :action => 'update'), :html => {:method => :put, :class => 'form-horizontal' } do |f|
  h3 Change Role
  = f.input :role_ids, :collection => Role.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline', checked: @user.role_ids.first
  = f.submit "Change Role", :class => "button"
